
<div class="row">
  <div class="mt-4 col-lg-3">
    {{#each news}}
    <div class="col-sm-12 ">
      <div class="card card-news-item">
        <a href="/news/{{this.slug}}">
          <img class="card-img-top" src="/public/img/{{this.image}}" alt="{{this.name}}">
        </a>
        <div class="card-body">
          <a href="/news/{{this.slug}}">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.description}}</p>
        </div>
      </div>
    </div>
    {{/each }}
  </div>
  <div class="mt-4 col-lg-9">

    <div class="row">
      {{#each news}}
      <div class="col-sm-6">
        <div class="card card-news-item">
          <a href="/news/{{this.slug}}">
            <img class="card-img-top" src="/public/img/{{this.image}}" alt="{{this.name}}">
          </a>
          <div class="card-body">
            <a href="/news/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.description}}</p>
          </div>
        </div>
      </div>

      {{/each }}

    </div>

  </div>

</div>