<section class="spad">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-8">
      <div class="row mx-auto">
        {{#each data}}
          <div class="col-sm-6">
            <div class="card card-news-item">
              <a href="/news/{{this.slug}}">
                <img class="card-img-top" src="/public/img/{{this.image}}" alt="{{this.name}}">
              </a>
              <div class="card-body">
                <a href="/news/{{this.slug}}">
                  <h5 class="card-title">{{this.name}}</h5>
                </a>
                <p class="card-text">{{this.description}}</p>
              </div>
            </div>
          </div>
        {{/each }}
      </div>
    </div>
  </div>
</section>