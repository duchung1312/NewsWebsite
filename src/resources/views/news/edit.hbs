<section class="login p-5">
    <div class="container py-3 my-2">
        <div class="row justify-content-md-center">
            <div class="col-md-12 col-lg-8 bg-white p-4 rounded">
                <h1 class="h1 my-4 text-center font-weight-bold">Đăng bài viết</h1>
                <div class="card-body">
                    <form method="post" action="/news/{{{news._id}}}/update/?Method=POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Tên</label>
                            <input type="text" class="form-control" value="{{news.name}}" name="name" id="name">
                        </div>
                        <div class="form-group">
                            <label for="description">Mô tả</label>
                            <textarea class="form-control" value="{{news.description}}" id="description"
                                name="description">{{news.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="content">Mô tả</label>
                            <textarea class="form-control" id="content123" name="content"
                                value="{{news.content}}">{{news.content}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="description">Ảnh</label>
                            <input type="file" value="{{news.image}}" id="avatar" name="avatar" />
                        </div>
                        <div class="form-group">
                            <label for="description">Thể loại</label>
                            <select name="categories" id="categories">
                                {{#each category}}
                                    <option value="{{this._id}}">
                                        {{this.name}}
                                    </option>
                                {{/each}}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>