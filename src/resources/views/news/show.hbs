<!-- Blog Details -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    <h3>{{News.name}}</h3>
                    <img class="img-fluid" src="/public/img/{{News.image}}" alt="{{News.name}}">
                    <p>{{News.content}}</p>
                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">
                                <div class="blog__details__author__pic">
                                    <img class="img-fluid" src="/public/img/{{News.image}}" alt="{{News.name}}">
                                </div>
                                <div class="blog__details__author__text">
                                    <h6>Michael Scofield</h6>
                                    <span>Admin</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <ul>
                                    <li><span>Categories:</span> Food</li>
                                    <li><span>Tags:</span> All, Trending, Cooking, Healthy Food, Life Style</li>
                                </ul>
                                <div class="blog__details__social">
                                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                                    <a href="#"><i class="fa-brands fa-telegram"></i></i></a>
                                    <a href="#"><i class="fa-brands fa-youtube"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Side Bar --}}
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    {{!-- Gần đây --}}
                    <div class="blog__sidebar__item">
                        <h4>Tin Gần Đây</h4>
                        <div class="blog__sidebar__recent">
                            {{#each news}}
                            <a href="/news/{{this.slug}}" class="blog__sidebar__recent__item">
                                <div class="blog__sidebar__recent__item__pic">
                                    <img src="/public/img/{{this.image}}" class="img-fluid" alt="{{this.name}}">
                                </div>
                                <div class="blog__sidebar__recent__item__text">
                                    <h6>{{this.name}}</h6>
                                    <span>May 4,2019</span>
                                </div>
                            </a>
                            {{/each }}
                        </div>
                    </div>
                    {{!-- Search --}}
                    <div class="blog__sidebar__search">
                        <form method="GET" action="news/search">
                            <input name="name" type="search" placeholder="Tìm kiếm...">
                            <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                    </div>
                    {{!-- Danh Mục --}}
                    <div class="blog__sidebar__item">
                        <h4>Danh Mục</h4>
                        <ul>
                            <li><a href="#">All</a></li>
                            <li><a href="#">Beauty (20)</a></li>
                            <li><a href="#">Food (5)</a></li>
                            <li><a href="#">Life Style (9)</a></li>
                            <li><a href="#">Travel (10)</a></li>
                        </ul>
                    </div>
                    {{!-- Mới --}}
                    <div class="blog__sidebar__item">
                        <h4>Tin mới</h4>
                        <div class="blog__sidebar__new">
                            {{#each news}}
                            <a href="/news/{{this.slug}}" class="blog__sidebar__new__item">
                                <div class="blog__sidebar__new__item__pic">
                                    <img src="/public/img/{{this.image}}" class="img-fluid" alt="{{this.name}}">
                                </div>
                                <div class="blog__sidebar__new__item__text">
                                    <h6>{{this.name}}</h6>
                                </div>
                            </a>
                            {{/each }}
                        </div>
                    </div>
                    {{!-- Thẻ --}}
                    <div class="blog__sidebar__item">
                        <h4>Search By</h4>
                        <div class="blog__sidebar__item__tags">
                            <a href="#">Apple</a>
                            <a href="#">Beauty</a>
                            <a href="#">Vegetables</a>
                            <a href="#">Fruit</a>
                            <a href="#">Healthy Food</a>
                            <a href="#">Lifestyle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
