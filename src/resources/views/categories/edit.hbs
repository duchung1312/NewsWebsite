            <label for="name">Tên</label>
            <input type="text" class="form-control" value="{{news.name}}" name="name" id="name">
            
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea  class="form-control" value="{{news.description}}" id="description" name="description">{{news.description}}</textarea>
            
        </div>
        <div class="form-group">
            <label for="content">Mô tả</label>
            <textarea  class="form-control" id="content123" name="content" value ="{{news.content}}">{{news.content}}</textarea>
            
        </div>
        <div class="form-group">
            <label for="description">Ảnh</label>
            <input type="file" id="avatar" name="avatar" />
            
        </div>
        
        <button  type="submit"   class="btn btn-primary">Lưu</button>
    </form>
    

</div>

